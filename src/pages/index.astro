---
import Header from "src/layouts/Header.astro";
import Home from "src/layouts/Home.astro";
---

<style is:global>
	.primary-font { font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; }

	.secondary-font { font-family: 'Fira Code', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; }

</style>

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Kevinantech</title>
	</head>
	<body class="font-['Fira_Code'] bg-[#10101a]">
		<div class="mx-auto md:max-w-2xl lg:max-w-4xl xl:max-w-6xl"> <!-- Refers to container -->
			<Header/>
			<Home />
		</div>
	</body>
</html>
